{
    "name" : "alttpr-for-my-retro-pi",

    "version" : "1.0.0",

    "type" : "module",

    "description" : "An Electron powered client for ALTTPR that is designed to work with RetroPie making randomizing ROMS for configured presets a couple of controller button presses.",

    "author" : "Luke Phillips",

    "homepage" : "https://github.com/lsphillips/alttpr-for-my-retro-pi",

    "bugs" :
    {
        "url" : "https://github.com/lsphillips/alttpr-for-my-retro-pi/issues"
    },

    "repository" :
    {
        "type" : "git",
        "url" : "https://github.com/lsphillips/alttpr-for-my-retro-pi.git"
    },

    "dependencies" :
    {
        "bps" : "2.0.1",
        "crc-32" : "1.2.2",
        "ajv" : "8.17.1"
    },

    "devDependencies" :
    {
        "esbuild" : "0.24.2",
        "eslint" : "9.18.0",
        "eslint-plugin-import" : "2.31.0",
        "eslint-plugin-promise" : "7.2.1",
        "eslint-plugin-n" : "17.15.1",
        "@stylistic/eslint-plugin-js" : "2.13.0",
        "eslint-config-protect-me-from-my-stupidity" : "12.0.1",
        "fs-extra" : "11.3.0",
        "react" : "19.0.0",
        "react-dom" : "19.0.0",
        "classnames" : "2.5.1",
        "@paulmillr/qr" : "0.3.0",
        "electron" : "34.0.0",
        "@electron/packager" : "18.3.6"
    },

    "optionalDependencies" :
    {
        "electron-installer-debian" : "3.2.0"
    },

    "main" : "src/main.js",

    "scripts" :
    {
        "lint" : "eslint \"**/*.@(js|cjs)\"",
        "build" : "node build.js building",
        "develop" : "node build.js developing",
        "start" : "electron . --config=config.json",
        "package" : "electron-packager ./build --arch arm64 --platform linux --out ./packages",
        "installer" : "electron-installer-debian --src ./packages/alttpr-for-my-retro-pi-linux-arm64 --dest ./installers --arch arm64 --compression xz"
    },

    "engines" :
    {
        "node" : ">=22.0.0"
    },

    "private" : true
}
